<h1> New Appearance </h1>
<br>
<% if !!flash[:errors] %>
<ul>
<% flash[:errors].each do |error|%>
<li> <%= error %> </li>
<% end %>
<% end %>
<br>

<%= form_for @appearance do |f|%>
<%=f.label:guest_id %>
    <%= f.collection_select :guest_id, Guest.all, :id, :name %>
    <br>
<%=f.label :episode_id%>
    <%= f.collection_select :episode_id, Episode.all, :id, :date %>
    <br>
<%=f.label :rating %>
    <%=f.number_field :rating %>
    <br>
    <%=f.submit %>
<%end %> 
    