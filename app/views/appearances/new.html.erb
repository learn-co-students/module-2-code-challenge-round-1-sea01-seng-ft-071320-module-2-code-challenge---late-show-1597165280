<h1>New Appearance Form<h1>


<% if !!flash[:errors] %>
<ul>
<%flash[:errors].each do |error| %>
<li> <%= error %> </li>
<% end %>
<% end %>


<%= form_for @appearance do |f| %>
  <%= f.label :guest_id, "Guest" %>
  <%= f.collection_select :guest_id, Guest.all, :id, :name%>

 <%= f.label :episode_id, "Episode" %>
 <%= f.collection_select :episode_id, Episode.all, :id, :number%>

  <%= f.label :rating %>
  <%= f.number_field :rating%>

  <%= f.submit %>
<% end %>
